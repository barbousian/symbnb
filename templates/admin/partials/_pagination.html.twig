<div class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{path(chemin, {'page': 1})}}">&laquo;</a>
            </li>
            {% for index in 1..nbPages %}
                <li class="page-item {% if index==page %}active{% endif %} ">
                    <a class="page-link" href="{{path(chemin, {'page': index})}}">{{ index }}</a>
                </li>
            {% endfor %}            
            <li class="page-item {% if page == nbPages %}disabled{% endif %}">
                <a class="page-link" href="{{path(chemin, {'page': nbPages})}}">&raquo;</a>
            </li>
        </ul>
    </div>
