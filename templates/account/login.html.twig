{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container">
    <div class="col-md-3">&nbsp;</div>
    <div class="col-md-6">
        <div class="bg-light py-3 px-3">
            <h1>Connectez-vous !</h1>

            {% if hasError %}
                <div class="alert alert-danger">Erreur connexion : mauvais utilisateur ou mot de passe ! </div>
            {% endif %}
            <form action="{{ path('account_login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" required name="_username" id="email" placeholder="adresse email..." class="form-control" {% if username %} value="{{username}}" {% endif %}>
                </div>
                <div class="form-group">
                    <label for="password">Mot de Passe</label>
                    <input type="password"  name="_password" id="password" placeholder="Mot de passe..." class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion !</button>
                </div>
            </form>

        </div>
    </div>

</div>
{% endblock %}
